<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="600" height="300">
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var message:String ="PLEASE WAIT";
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:DropShadowFilter id="shadowfilter" strength=".8" distance="8" />
	</fx:Declarations> 
	<s:Rect id="tbFill" left="0" right="0" top="0" bottom="1" radiusX="30" filters="{[shadowfilter]}">
		<s:fill>
			<s:SolidColor color="#91278E"/>

		</s:fill>
	</s:Rect>
	<s:Label x="10" y="124" width="580" textAlign="center" color="#FFFFFF" fontSize="64" text="{message}"/>
</s:Group>
